<html>
<meta name="viewport" content="width=device-width, initial-scale=1">
<meta http-equiv="Content-Type" content="text/html; charset=utf-8">

<head>
    <title>SBDIV_Form</title>
    <link rel="stylesheet" type="text/css" href="/css/form.css">
    <script type="text/javascript" src="/js/form.js"></script>
    <style>        
        input[type="text"], input[type="number"], .dropdown{            
            color: black;
            margin-left: 150px;
            margin-right: 20px;
            width: -webkit-fill-available;            
        }
        .dropdown {
            width: auto;
        }
    </style>
        
</head>

<body>
    <form action="/form" enctype="multipart/form-data" method="post" onsubmit="return confirm('Press \'YES\' to insert the markers.');">

        <div class="rows">
            <div class="rowsTitle">Markers Form - SBDIV</div>
            <div class="row">
                <label class="info">Route Information</label>
                <label class="attrLabel">Video: </label><input type="text" name="VideoID" placeholder="Video ID or Name" required>
                <label class="attrLabel">Route: </label><input type="text" name="Route" placeholder="Route(Optional)">
                <label class="attrLabel">Description: </label><input type="text" name="RouteDescription" placeholder="Description(Optional)">
                <br>
            </div>

            <% for (var i = 0; i<quantity ;i++) { %>
            <div class="row">
                <% if ( i == 0) { %>
                <label class="info">Marker</label>
                <% } %>
                <label class="attrLabel">Title: </label><input type="text" name="Title" placeholder="Title" required>
                <label class="attrLabel">Latitude: </label><input type="number" step="any" name="Lat" placeholder="Latitude" required>
                <label class="attrLabel">Longitude: </label><input type="number" step="any" name="Lng" placeholder="Longitude" required>
                <label class="attrLabel">Description: </label><input type="text" name="Description" placeholder="Description(Optional)">
                <label class="attrLabel">Type: </label><select name="groupType" class="dropdown">
                    <option value="Building">Building</option>
                    <option value="Pier">Pier</option>
                    <option value="Beach">Beach</option>
                    <option value="Typhoon shelters">Typhoon shelters</option>
                    <option value="Others">Others</option>
                </select>
                
                <% if ( i != 0) { %>
                <input type="button" name="deleteRowButton" onclick="document.querySelector('.rows').removeChild(this.parentNode);updateCountMarker();updateCountState();" class="deleteRowButton" value="Delete">
                <% } %>
                <br>
            </div>
            <% }  %>
        </div>

        <div class="btn-group">
            <input type="button" id="countMarker" disabled=true style="display:none" title="Display the quantity of Markers">
            <input type="button" onclick="addRow();updateCountState();" class="addRow" value="+" title="Add more markers" style="font-size: xx-large;">
            <input type="submit" value="Submit">
        </div>
    </form>
</body>
</html>